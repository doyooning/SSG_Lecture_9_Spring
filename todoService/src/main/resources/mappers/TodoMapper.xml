<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssg.todoservice.mapper.TodoMapper">
 
    <select id="getTime" resultType="string">
        SELECT NOW()
    </select>

<!--    <resultMap id="TodoResultMap" type="com.ssg.todoservice.dto.TodoDTO">-->
<!--        <id property="tno"    column="tno"/>-->
<!--        <result property="title"   column="title"/>-->
<!--        <result property="finished" column="finished"/>-->
<!--        <result property="writer"  column="writer"/>-->
<!--        <result property="dueDate"  column="dueDate" jdbcType="DATE" javaType="java.time.LocalDate"/>-->
<!--    </resultMap>-->


    <insert id="insert" parameterType="com.ssg.todoservice.dto.TodoDTO">
        INSERT INTO todo (title, writer, dueDate)
        VALUES (#{title}, #{writer},
        #{dueDate, jdbcType=DATE, javaType=java.time.LocalDate})
    </insert>

    <!-- MyBatis는 기본적으로 getXXX, setXXX 를 통해서 동작,
      #{skip}은 Page-->
    <select id="selectAll" resultType="com.ssg.todoservice.domain.TodoVO">
        SELECT * FROM todo
        ORDER BY tno desc limit #{skip}, #{size}
    </select>

    <select id="selectOne" resultType="com.ssg.todoservice.domain.TodoVO">
        SELECT tno, title, finished, writer, dueDate
        FROM todo
        WHERE tno = #{tno}
    </select>

    <delete id="delete">
        delete from todo where tno = #{tno}
    </delete>

    <update id="update">
        update todo set title = #{title} , dueDate = #{dueDate},
        finished= #{finished} where tno = #{tno}
    </update>

    <!--  todo테이블의 전체 row 개수를 반환  -->
    <select id="getCount" resultType="int">
        select count(tno) from todo
    </select>

    <select id="selectList" resultType="com.ssg.todoservice.domain.TodoVO">
        select * from todo
        <where>
            <if test="types != null and types.length > 0">
                <foreach collection="types" item="type" open="(" close=")" separator=" OR ">
                    <if test="type == 't'.toString()">
                        title like concat('%', #{keyword}, '%')
                    </if>
                    <if test="type == 'w'.toString()">
                        writer like concat('%', #{keyword}, '%')
                    </if>
                </foreach>
            </if>
            <if test="finished">
                <trim prefix="and">
                    finished = 1
                </trim>
            </if>
            <if test="from != null and to != null">
                <trim prefix="and">
                    dueDate between  #{from} and #{to}
                </trim>
            </if>
        </where>
        order by tno desc limit #{skip}, #{size}
    </select>

</mapper>