<!--        <result property="writer"  column="writer"/>-->
<!--        <result property="dueDate"  column="dueDate" jdbcType="DATE" javaType="java.time.LocalDate"/>-->
<!--    </resultMap>-->


    <insert id="insert" parameterType="com.ssg.todoservice.dto.TodoDTO">
        INSERT INTO todo (title, writer, dueDate)
        VALUES (#{title}, #{writer},
        #{dueDate, jdbcType=DATE, javaType=java.time.LocalDate})
    </insert>

    <select id="selectAll" resultType="com.ssg.todoservice.domain.TodoVO">
        SELECT tno, title, finished, writer, dueDate
        FROM todo
        ORDER BY tno desc
    </select>

    <select id="selectOne" resultType="com.ssg.todoservice.domain.TodoVO">
        SELECT tno, title, finished, writer, dueDate
        FROM todo
        WHERE tno = #{tno}
    </select>

    <delete id="delete">
        delete from todo where tno = #{tno}
    </delete>

    <update id="update">
        update todo set title = #{title} , dueDate = #{dueDate},
        finished= #{finished} where tno = #{tno}
    </update>

</mapper>