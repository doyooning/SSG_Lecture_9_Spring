<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssg.todoservice.mapper.TodoMapper">

    <select id="getTime" resultType="string">
        SELECT NOW()
    </select>

